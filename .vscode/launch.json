    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceRoot}/dist",
            "preLaunchTask": "Webpack watch",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                }
            ]
        }
    ]
