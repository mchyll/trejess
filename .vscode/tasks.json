{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Typescript watch and build",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "isBackground": true
        },
        {
            "type": "npm",
            "script": "dev-server",
            "problemMatcher": [],
            "label": "Run dev server",
            "isBackground": true,
            "group": "build"
        },
        {
            "label": "Open in Firefox",
            "type": "process",
            "command": "C:\\Program Files\\Mozilla Firefox\\firefox.exe",
            "args": [
                "localhost:8080"
            ],
            "group": "build"
        },
        {
            "label": "Compile and run",
            "problemMatcher": [],
            "dependsOn": [
                "Run dev server",
                "Typescript watch and build",
                "Open in Firefox"
            ],
            "dependsOrder": "parallel",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true
        }
    ]
}